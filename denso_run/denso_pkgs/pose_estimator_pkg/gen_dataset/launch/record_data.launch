<?xml version="1.0"?>
<launch>



  <arg name="num_dataset" default="20000" />

  <arg name="angle_range" default="2"/>
  
  <arg name="sensor_parent_frame" default="photoneo_center_optical_frame" />
  <arg name="topic_name" default="" />
  <arg name="object_name" default="HV8" />
  <arg name="object_up" default="HV8_up" />
  <arg name="init_pose_up" default="-x 0 -y 0 -z 0 -R 0.0 -Y -0.0" />
  <arg name="init_x" default="1" />
  <arg name="save_file" default="/home/ericlab/MEGAsync/TEI_PC/Dataset/dataset_20000_-pi4-pi4"/>
  <arg name="save_histgram_directory" default="/home/ericlab/ros_package/denso_ws/src/denso_run/denso_pkgs/pose_estimator_pkg/datasets/histgram" />


  <arg name="save_directory" default="/home/ericlab/ros_package/denso_ws/src/denso_run/denso_pkgs/pose_estimator_pkg/datasets/ericlab"/>
  
  <node name="random_move" pkg="gen_dataset" type="random_move_euler.py">
    <param name="object_name" value="$(arg object_name)"/>
    <param name="angle_range" value="$(arg angle_range)"/>
    <param name="save_histgram_directory" value="$(arg save_histgram_directory)"/>
  </node>
  <node pkg="gen_dataset" type="record_data.py" name="record_data" output="screen" >
    <param name="sensor_parent_frame" value="$(arg sensor_parent_frame)" />
    <param name="topic_name" value="$(arg topic_name)" />
    <param name="object_name" value="$(arg object_name)" />
    <param name="num_dataset" value="$(arg num_dataset)" />
    <param name="save_directory" value="$(arg save_directory)"/>
    <param name="save_histgram_directory" value="$(arg save_histgram_directory"/>
    <param name="angle_range" value="$(arg angle_range)"/>

  </node>
  <node name="image_view" pkg="image_view" type="image_view" respawn="false" output="screen">
    <remap from="image" to="/photoneo_center/camera/image_color"/>
    <param name="autosize" value="true" />
  </node>



</launch>
