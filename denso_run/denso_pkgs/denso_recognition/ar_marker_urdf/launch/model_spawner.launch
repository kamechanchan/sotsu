<launch>
  <arg name="id" default="00"/>
  <arg name="model" default="$(find ar_marker_urdf)/urdf/ar_marker_cube.xacro"/>
  <arg name="model_name" default="ar_marker_cube_$(arg id)"/>
  <arg name="x" default="0"/>
  <arg name="y" default="0"/>
  <arg name="z" default="0"/>
  <arg name="roll" default="0"/>
  <arg name="pitch" default="0"/>
  <arg name="yaw" default="0"/>

  <param name="marker_$(arg id)_description" type="str" command="$(find xacro)/xacro --inorder $(arg model) id:=$(arg id)"/>

  <node name="spawn_$(arg model_name)" pkg="gazebo_ros" type="spawn_model"
      args="-param marker_$(arg id)_description -urdf -x $(arg x) -y $(arg y) -z $(arg z) -R $(arg roll) -P $(arg pitch) -Y $(arg yaw) -model $(arg model_name)"
      respawn="false" output="screen" />
</launch>
