<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find mhand_description)/urdf/mhand_finger/mhand_finger.transmission.xacro"/>

  <xacro:macro name="mhand_finger_v0" params="suffix parent *joint_origin *joint_axis">
	<joint name="finger_${suffix}_joint" type="revolute">
	  <xacro:insert_block name="joint_origin"/>
	  <parent link="${parent}"/>
	  <child link="mhand_finger_${suffix}"/>
	  <xacro:insert_block name="joint_axis"/>
	  <limit lower="-1.22" upper="0" effort="0.5293" velocity="6.159937255" />
	</joint>

	<link name="mhand_finger_${suffix}">
	  <visual>
	    <geometry>
	      <mesh filename="package://mhand_description/meshes/DAE/mhand_finger.dae"/>
	    </geometry>
	  </visual>
	  <collision>
	    <geometry>
	      <mesh filename="package://mhand_description/meshes/STL/mhand_finger.stl"/>
	    </geometry>
	  </collision>
	  <inertial>
	    <origin xyz="0 0 0"/>
	    <mass value="0.968"/>
	    <inertia ixx="0.002" ixy="0.0" ixz="0.0"
		     iyy="0.003" iyz="0.0"
		     izz="0.001" />
	  </inertial>
	</link>
	<xacro:finger_transmission suffix="${suffix}"/>
  </xacro:macro>

</robot>
